{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "comma-dangle": ["error", "never"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "space-infix-ops": ["error", {"int32Hint": false}],
        "react/jsx-curly-spacing": [2, "always"],
        "react/prop-types": [0, { "ignore": [], "customValidators": [] }],
        "no-console": "off",
        "template-curly-spacing": ["error", "always"]
    }
}
